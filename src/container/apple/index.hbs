<div class='page'>
  {{#with header}}
    <section class='header'>
      <header class='header__content'>
        <div class='header__block'>
          <img
            class='header__icon'
            src='/svg/apple.svg'
            alt='Apple'
          />
          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__link'
              >{{text}}</a>
            {{/each}}
          </nav>
        </div>
        <div class='header__block'>
          <img
            class='header__icon'
            src='/svg/search.svg'
            alt='search-icon'
          />
